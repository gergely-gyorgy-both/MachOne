{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "refactor",
        "style",
        "chore",
        "ci",
        "docs",
        "test",
        "merge"
      ]
    ],
    "subject-case": [
      2,
      "always",
      [
        "lower-case",
        "camel-case",
        "pascal-case"
      ]
    ],
    "scope-empty": [
      2,
      "never"
    ],
    "header-max-length": [
      2,
      "always",
      120
    ]
  }
}